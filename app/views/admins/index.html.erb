<h1>All admins</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.name %></td>
      <td><%= admin.email %></td>
      <td><%= link_to 'Show', '#' %></td>
      <td><%= link_to 'Edit', '#' %></td>
      <td><%= link_to 'Destroy', '#', class: 'btn btn-danger btn-xs' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
